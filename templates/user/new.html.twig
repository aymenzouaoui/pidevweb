{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block title %}New User
{% endblock %}

{% block body %}

	{{ form_start(form,{'attr': {'novalidate': 'novalidate'}}
	) }}
	<!-- ======= Breadcrumbs ======= -->
	<div class="breadcrumbs d-flex align-items-center" style="background-image: url('assets/img/contact-header.jpg');">
		<div class="container position-relative d-flex flex-column align-items-center">

			<h2>S’inscrire</h2>
			<ol>
				<li>
					<a href="index.html">Home</a>
				</li>
				<li>S’inscrire</li>
			</ol>

		</div>
	</div>
	<!-- End Breadcrumbs -->


	<section class="contact-form-area section-bg  pt-115 pb-120 fix">
		<img src="{{ asset('front/assets/img/bac2.jpg') }}" class="background--page" alt="..." width="60%" height="90%">

		<div class="container" style="margin-top:-44%;margin-left:25%;">
			<div
				class="row justify-content-end">
				<!-- Contact wrapper -->
				<div class="col-xl-8 col-lg-9">
					<div
						class="contact-form-wrapper">
						<!-- From tittle -->
						<div class="row">
							<div
								class="col-lg-12">
								<!-- Section Tittle -->
								<div class="section-tittle mb-50">
									
									<h2>S’inscrire</h2>
									<p><h2>Rejoignez Amena aujourd’hui.</h2></p>
								</div>
							</div>
						</div>
						<!-- form -->
						<form action="#" class="contact-form">
							<div class="row ">
								<div class="col-lg-6 col-md-6">
									<div class="input-form">
										{{ form_label(form.nom) }}
										{{ form_widget(form.nom) }}
										{{form_errors(form.nom)}}
									</div>
								</div>
								<div class="col-lg-6 col-md-6">
									<div class="input-form">
										<div class="form-group">
											{{ form_label(form.prenom) }}
											{{ form_widget(form.prenom) }}
											{{ form_errors(form.prenom) }}
										</div>
									</div>
								</div>
								<div class="col-lg-12">
									<div class="input-form">
										{{ form_label(form.email) }}
										{{ form_widget(form.email) }}
										{{ form_errors(form.email) }}
										{{ form_label(form.password) }}
										{{ form_widget(form.password) }}
										{{ form_errors(form.password) }}
									</div>
								</div>
								<div class="col-lg-6">
									<div class="select-items">
										<div class="form-group">
											{{ form_label(form.roles) }}
											{{ form_widget(form.roles) }}
											{{ form_errors(form.roles) }}
										</div>
									</div>
								</div>
								<div class="col-lg-6 col-md-6">
									<div class="input-form">
										{{ form_label(form.adress) }}
										{{ form_widget(form.adress) }}
										{{ form_errors(form.adress) }}
									</div>
								</div>
								<div class="col-lg-6 col-md-6 col-sm-6">
									<div class="input-form">
										
											{{ form_label(form.date_naissance) }}
											
											{{ form_widget(form.date_naissance) }}
											{{ form_errors(form.date_naissance) }}
									
									</div>
								</div>
								<div class="col-lg-6 col-md-6 col-sm-6">
									<div class="input-form"></div>
								</div>
								<!-- Height Width length -->
								<div class="col-lg-4 col-md-6 col-sm-6">
									<div class="input-form">
										{{ form_label(form.numtel) }}
										{{ form_widget(form.numtel) }}
										{{ form_errors(form.numtel) }}
										{{ form_row(form._token) }}
									</div>
								</div>
								<div class="col-lg-4 col-md-6 col-sm-6">
									<div class="input-form">
										{{ form_label(form.cin) }}
										{{ form_widget(form.cin) }}
										{{ form_errors(form.cin) }}
									</div>
								</div>
								<div class="col-lg-4 col-md-6 col-sm-6">
									<div
										class="input-form">{# <input type="text" placeholder="length"> #}
									</div>
								</div>

								<div class="col-lg-12" position>
									<button type="submit" class="btn btn-outline-success">S’inscrire</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</section>
	<a class="btn btn-outline-dark" href="{{ path('app_user_index') }}">back to list</a>
{% endblock %}
