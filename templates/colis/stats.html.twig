{% extends 'base.html.twig' %}

{% block title %}Statistiques des colis{% endblock %}

{% block body %}
<h1>Statistiques des colis</h1>
<canvas id="colis-chart"></canvas>
{% endblock %}

{% block javascripts %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"></script>
<script>
var data = {{ data|raw }};
var ctx = document.getElementById('colis-chart').getContext('2d');
var chart = new Chart(ctx, {
type: 'pie',
data: data,
});
</script>
{% endblock %}