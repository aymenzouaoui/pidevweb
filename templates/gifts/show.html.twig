{% extends 'baseadmin.html.twig' %}

{% block title %}Gifts{% endblock %}

{% block body %}
    <h1>Gifts</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ gift.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ gift.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ gift.description }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ gift.value }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td><img style="width:75px;height:75px" src="{{  asset('gift.photo') }}"> </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_gifts_index') }}">back to list</a>

    <a href="{{ path('app_gifts_edit', {'id': gift.id}) }}">edit</a>

    {{ include('gifts/_delete_form.html.twig') }}
{% endblock %}
