{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}
{% block title %}Validation
{% endblock %}

{% block body %}
	<section class="vh-100" style="background-color: #9de2ff;">
		<div class="container py-5 h-100">
			<div class="row d-flex justify-content-center align-items-center h-100">
				<div class="col col-md-9 col-lg-7 col-xl-5">
					<div class="card" style="border-radius: 15px;">
						<div class="card-body p-4">
							<a class="btn btn-light" href="{{ path('app_validation_index') }}">back to list</a>

							<a class="btn btn-light" href="{{ path('app_validation_edit', {'id': validation.id}) }}">edit</a>
							
							<div class="d-flex text-black">
								<div class="flex-shrink-0">
									<img src="{{ user.image }}" style="width: 180px; border-radius: 10px;">
								</div>
								<div class="flex-grow-1 ms-3">
									<h5 class="mb-1">{{ user.nom}}</h5>
									<p class="mb-2 pb-1" style="color: #2b2a2a;">{{ user.prenom}}</p>
									<div class="d-flex justify-content-start rounded-3 p-2 mb-2" style="background-color: #efefef;">
										<div class="image-container">
											<img style="width:100px;height:100px" src="{{ validation.imagea }}" alt="Validation Image">
										</div>
										<div class="image-container">
											<img style="width:100px;height:100px" src="{{ validation.imageb }}" alt="Validation Image">
										</div>
										<div>
											<p class="small text-muted mb-1">Rating</p>
											<p class="mb-0">{{ user.score}}</p>
										</div>
									</div>
									{% if validation.valide %}
										<button type="button" class="btn btn-danger flex-grow-1">Valider</button>
									{% else %}
										<button type="button" class="btn btn-success flex-grow-1">Non valider</button>
									{% endif %}
								</div>
								{{ include('validation/_delete_form.html.twig', {'class': 'btn-danger'}) }}

							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>


	
{% endblock %}
